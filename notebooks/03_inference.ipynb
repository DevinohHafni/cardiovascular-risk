import tensorflow as tf
import numpy as np
import cv2
import matplotlib.pyplot as plt

model = tf.keras.models.load_model('cvd_nail_model.h5')

def predict_nail_risk(image_path):
    # 1. Load and Preprocess the image
    img = cv2.imread(image_path)
    img = cv2.resize(img, (224, 224))
    img = img / 255.0  # Normalize pixels
    img = np.expand_dims(img, axis=0) # Make it a 'batch' of 1

    # 2. Get Prediction
    prediction = model.predict(img)
    classes = ['bluish', 'normal', 'unknown'] # Match your LabelEncoder order
    result = classes[np.argmax(prediction)]
    
    # 3. Show the result
    plt.imshow(cv2.cvtColor(cv2.imread(image_path), cv2.COLOR_BGR2RGB))
    plt.title(f"Predicted Status: {result}")
    plt.axis('off')
    plt.show()
    
    return result

# Replace this path with an actual image path from your data/raw folder
test_image = "../data/raw/blue_finger/some_image.jpg" 

status = predict_nail_risk(test_image)
print(f"The model identifies this nail as: {status}")
