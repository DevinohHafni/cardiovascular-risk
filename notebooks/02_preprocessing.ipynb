import os
import cv2
import numpy as np
import pandas as pd

RAW_DIR = "../data/raw"
OUT_DIR = "../data/processed"
IMG_SIZE = 224

os.makedirs(OUT_DIR, exist_ok=True)

records = []

def color_label(folder):
    if folder == "Healthy_Nail":
        return "normal"
    if folder == "blue_finger":
        return "bluish"
    return "unknown"

def morphology_label(folder):
    return {
        "clubbing": [1,0,0],
        "pitting": [0,1,0],
        "Onychogryphosis": [0,0,1]
    }.get(folder, [0,0,0])

for folder in os.listdir(RAW_DIR):
    if folder == "Acral_Lentiginous_Melanoma":
        continue

    folder_path = os.path.join(RAW_DIR, folder)
    for img_name in os.listdir(folder_path):
        img_path = os.path.join(folder_path, img_name)

        img = cv2.imread(img_path)
        img = cv2.resize(img, (IMG_SIZE, IMG_SIZE))
        img = img / 255.0

        out_path = os.path.join(OUT_DIR, f"{folder}_{img_name}")
        np.save(out_path, img)

        records.append({
            "image": out_path,
            "color": color_label(folder),
            "clubbing": morphology_label(folder)[0],
            "pitting": morphology_label(folder)[1],
            "deformation": morphology_label(folder)[2]
        })

df = pd.DataFrame(records)
df.to_csv(os.path.join(OUT_DIR, "labels.csv"), index=False)

